<div class="card text-start mt-3" style="width: 33.333%;">
  <div class="container">
    <a href="/beers/{{this.id}}" " class="mx-auto">
      <img class="card-img-top img-size" src="{{this.image_url}}" alt="">
    </a>
  </div>
  <div class="card-body">
    <h5 class="card-title font-weight-bold">{{this.name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted pb-2"> {{this.tagline}} </h6>
    <p class="card-text">{{this.description}}</p>
  </div>
</div>